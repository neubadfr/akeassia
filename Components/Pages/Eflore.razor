    ul{
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(0em, max-content));
    grid-auto-flow: column;
    list-style: none;
    padding: 0;
    margin: 1em;
    gap: 5px
}

li:before {
    content: "";
  }
  
ul:before {
  content: '';
  grid-column: -1;
  width: 0;
  grid-row: 1 /40;  /*6 rows */
}

li {
  background: silver;
  padding: 0.15em;
  margin: 0;
}

li:first-letter {
  color:tomato; /*ketchup*/
}
</style>

